class Solution {
    public boolean checkAlmostEquivalent(String word1, String word2) {
        int[] letters = new int[26];  
        for(int i = 0;i < word1.length(); i++)
        {
            letters[word1.charAt(i) - 'a']++;
            letters[word2.charAt(i) - 'a']--;
        }
        
        for(int i = 0; i < 26; i++)
        {
            if(Math.abs(letters[i]) > 3) {
                return false;
            }
        }
        return true;
    }
}
