private void sort012Array(int[] arr){
		int zero = 0, one = 0, two = 0;
		for(int number : arr){
			zero += number == 0 ? 1 : 0;
			one += number == 1 ? 1 : 0;
			two += number == 2 ? 1 : 0;
		}
		for(int i = 1; i <= zero; i++){
			System.out.print("0");
		}
		for(int i = 1; i <= one; i++){
			System.out.print("1");
		}
		for(int i = 1; i <= two; i++){
			System.out.print("2");
		}
		System.out.println("");
	}
