import java.util.*;
class Solution { 
    public int maxOperations(int[] nums, int k) {
        Map<Integer, Integer> map = new HashMap<>();
        int count = 0;
        for(int num : nums) {
            int b = k - num;
            if(map.containsKey(b) && map.get(b) > 0) {
                map.put(b, map.get(b) - 1);
                count++;
            } else {
                map.put(num, map.getOrDefault(num, 0) + 1);
            }
        }

        return count;
    }
}
